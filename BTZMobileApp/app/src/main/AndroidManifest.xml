<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.btzmobileapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BTZMobileApp"
        tools:targetApi="31">

        <activity
            android:name=".views.activities.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BTZMobileApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaração da AdminActivity -->
        <activity
            android:name=".views.activities.AdminActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BTZMobileApp" />

        <!-- Declaração da CadastrarUserActivity -->
        <activity
            android:name=".views.activities.CadastrarUserActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BTZMobileApp" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>