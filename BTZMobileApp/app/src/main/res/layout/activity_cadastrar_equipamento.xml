<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".views.admin.CadastrarEquipamentoActivity">

    <EditText
        android:id="@+id/inputEquipamentoNome"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:hint="Nome do Equipamento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputEquipamentoCodigo"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:hint="CÃ³digo do Equipamento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputEquipamentoNome"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnCadastrarEquipamento"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:text="Cadastrar Equipamento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputEquipamentoCodigo"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/imgQrCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCadastrarEquipamento"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>